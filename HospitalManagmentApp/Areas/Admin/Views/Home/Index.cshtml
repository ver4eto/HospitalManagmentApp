<div class="container mt-5">
    <div class="text-center">
        <h2 class="display-4 mb-4 text-primary">Welcome to the Admin Panel!</h2>
        <p class="lead mb-5 text-muted">Manage your application using the sections below:</p>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-users fa-3x text-primary mb-3"></i>
                    <h5 class="card-title">Manage Users</h5>
                    <p class="card-text text-muted">Add, edit, or remove users and assign roles.</p>
                    <a asp-area="Admin" asp-controller="UserManagement" asp-action="Index" class="btn btn-primary mt-auto w-100">
                        Go to Users
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-film fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title">Manage Departments</h5>
                    <p class="card-text text-muted">Add, remove or edit facilities in current departments.</p>
                    <a asp-area="Account" asp-controller="Department" asp-action="Index" class="btn btn-secondary mt-auto w-100">
                        Manage Departments
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-video fa-3x text-info mb-3"></i>
                    <h5 class="card-title">Manage Doctors</h5>
                    <p class="card-text text-muted">Add, discharge or edit status of current doctors.</p>
                    <a asp-area="Account" asp-controller="Doctor" asp-action="Index" class="btn btn-info mt-auto w-100">
                        Go to Doctors
                    </a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow h-100 border-0">
                <div class="card-body d-flex flex-column align-items-center text-center">
                    <i class="fas fa-film fa-3x text-secondary mb-3"></i>
                    <h5 class="card-title">Manage Nurses</h5>
                    <p class="card-text text-muted">Add, remove or edit status of nurses.</p>
                    <a asp-area="Account" asp-controller="Nurse" asp-action="Index" class="btn btn-secondary mt-auto w-100">
                        Manage Nurses
                    </a>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="card shadow h-100 border-0">
                    <div class="card-body d-flex flex-column align-items-center text-center">
                        <i class="fas fa-users fa-3x text-primary mb-3"></i>
                        <h5 class="card-title">Manage Patients</h5>
                        <p class="card-text text-muted">Create, edit status or remove patients .</p>
                        <a asp-area="Account" asp-controller="Patient" asp-action="Index" class="btn btn-primary mt-auto w-100">
                            Go to Patients
                        </a>
                    </div>
                </div>
            </div>
    </div>
</div>
