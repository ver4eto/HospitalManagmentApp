@using HospitalManagment.ViewModels.Patient
@model AddPatientViewModel

@{
    ViewData["Title"] = "Add Patient";
}

<div class="container mt-5">
    <h2 class="text-center">Add New Patient</h2>

    <form asp-action="Add" method="post" class="mt-4">
        <div class="form-group">
            <label asp-for="FirstName" class="control-label" p style="font-weight: bold;">First Name</label>
            <input asp-for="FirstName" class="form-control" aria-required="true" />
            <span asp-validation-for="FirstName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="LastName" class="control-label" p style="font-weight: bold;">Last Name</label>
            <input asp-for="LastName" class="form-control" aria-required="true" />
            <span asp-validation-for="LastName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="EGN" class="control-label" p style="font-weight: bold;">EGN of patient</label>
            <input asp-for="EGN" class="form-control" aria-required="true" />
            <span asp-validation-for="EGN" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Address" class="control-label" p style="font-weight: bold;">Address</label>
            <input asp-for="Address" class="form-control" aria-required="true" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label asp-for="EmailAddress" class="control-label" p style="font-weight: bold;">Email</label>
            <input asp-for="EmailAddress" type="email" class="form-control" aria-required="true" />
            <span asp-validation-for="EmailAddress" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="PhoneNumber" class="control-label" p style="font-weight: bold;">Telephone nuber</label>
            <input asp-for="PhoneNumber"  class="form-control" aria-required="true" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="HasMedicalInsurance" class="control-label" p style="font-weight: bold;">Has Medical Insurance?</label>
            <input asp-for="HasMedicalInsurance" type="form-control" class="form-control" aria-required="true" />
            <span asp-validation-for="HasMedicalInsurance" class="text-danger"></span>
        </div>

        <div class="col-sm-6 mb-2">
            <label asp-for="@Model.DepartmentId" class="form-label-add-edit" p style="font-weight: bold;">Select Department for admition</label>
            <select asp-for="@Model.DepartmentId" class="form-control" aria-required="true" asp-items="@(new SelectList(Model.Departments, "Id", "Name"))">
                <option value="">Select Department...</option>
            </select>
            <span asp-validation-for="@Model.DepartmentId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary mt-3">Add New Patient</button>
        <a asp-action="Index" class="btn btn-secondary mt-3 ml-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
