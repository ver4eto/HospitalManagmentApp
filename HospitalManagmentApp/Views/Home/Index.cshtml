@{
    ViewData["Title"] = "Hospital Management System";
}

<div class="container mt-5">
    <h2 class="text-center">Hospital Management System</h2>
    <div class="row justify-content-center mt-4">

        <!-- Doctor Dropdown -->
        @if (User.IsInRole("Manager"))
        {
                <div class="dropdown mt-4">
                    <button class="btn btn-primary dropdown-toggle" type="button" id="managerDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                        Manager Actions
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="managerDropdown">
                        <li><a class="dropdown-item" asp-controller="Manager" asp-action="Index">Dashboard</a></li>
                        <li><a class="dropdown-item" asp-controller="Manager" asp-action="EmployeeManage">Employees Management</a></li>
                        <li><a class="dropdown-item" asp-controller="Manager" asp-action="FacilitiesManage">Facilities Management</a></li>
                    </ul>
                </div>
            
            <div class="col-md-2">

                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle w-100" type="button" id="doctorDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Doctor
                    </button>

                    <div class="dropdown-menu" aria-labelledby="doctorDropdown">



                        <a class="dropdown-item" asp-area="" asp-controller="Doctor" asp-action="Index">View Doctors</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Doctor" asp-action="Create">Add Doctor</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Doctor" asp-action="Menage">Manage Doctors</a>
                        }

                    </div>
                </div>
            </div>
        }
        <!-- Nurse Dropdown -->
        <div class="col-md-2">
            @if (User.IsInRole("Manager"))
            {
                <div class="dropdown">
                    <button class="btn btn-primary dropdown-toggle w-100" type="button" id="nurseDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Nurse
                    </button>
                    <div class="dropdown-menu" aria-labelledby="nurseDropdown">
                        <a class="dropdown-item" asp-area="" asp-controller="Nurse" asp-action="Index">View Nurses</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Nurse" asp-action="Add">Add Nurse</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Nurse" asp-action="Manage">Manage Nurses</a>

                    </div>
                </div>
            }
        </div>

        <!-- Patient Dropdown -->
        <div class="col-md-2">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle w-100" type="button" id="patientDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Patient
                </button>
                <div class="dropdown-menu" aria-labelledby="patientDropdown">
                    <a class="dropdown-item" href="/Patient/Index">View Patients</a>
                    @if (User.IsInRole("Manager") || User.IsInRole("Doctor") || User.IsInRole("Nurse"))
                    {
                        <a class="dropdown-item" href="/Patient/Add">Add Patient</a>
                        <a class="dropdown-item" href="/Patient/Manage">Manage Patients</a>
                    }
                </div>
            </div>
        </div>

        <!-- Department Dropdown -->
        <div class="col-md-2">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle w-100" type="button" id="departmentDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Department
                </button>
                <div class="dropdown-menu" aria-labelledby="departmentDropdown">
                    @if (User.IsInRole("Manager") || User.IsInRole("Doctor") || User.IsInRole("Nurse"))
                    {
                        <a class="dropdown-item" asp-area="" asp-controller="Department" asp-action="Index">View Departments</a>
                        <a class="dropdown-item" asp-area="" asp-controller="Department" asp-action="Add">Add Department</a>
                        <a class="dropdown-item" href="/Department/Manage">Manage Departments</a>
                    }

                </div>
            </div>
        </div>

        <!-- Room Dropdown -->
        <div class="col-md-2">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle w-100" type="button" id="roomDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Room
                </button>
                <div class="dropdown-menu" aria-labelledby="roomDropdown">
                    @if (User.IsInRole("Manager") || User.IsInRole("Doctor") || User.IsInRole("Nurse"))
                    {
                        <a class="dropdown-item" href="/Room/Index">View Rooms</a>
                        <a class="dropdown-item" href="/Room/Manage">Manage Rooms</a>
                    }
                </div>
            </div>
        </div>

        <!-- Treatment Dropdown -->
        <div class="col-md-2">
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle w-100" type="button" id="treatmentDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Treatment
                </button>
                <div class="dropdown-menu" aria-labelledby="treatmentDropdown">
                    @if (User.IsInRole("Manager") || User.IsInRole("Doctor") || User.IsInRole("Nurse"))
                    {
                        <a class="dropdown-item" href="/Treatment/Index">View Treatments</a>
                        <a class="dropdown-item" href="/Treatment/Add">Add Treatment</a>
                        <a class="dropdown-item" href="/Treatment/Manage">Manage Treatments</a>
                    }
                </div>
            </div>
        </div>

    </div>
</div>
