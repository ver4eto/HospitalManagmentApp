﻿@using HospitalManagment.ViewModels.Doctor
@model IEnumerable<DoctorIndexViewModel>

@{
    ViewData["Title"] = "All Doctors";
}

<h2>All Doctors</h2>

<div class="row">
    @foreach (var doctor in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/images/Untitled.jpg" class="card-img-top" alt="Doctor Image" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <p class="card-title">@doctor.FirstName</p>
                    <p class="card-text">@doctor.LastName</p>
                    <p class="card-text"> @doctor.Specialty</p>
                    <p class="card-text"> @doctor.DepartmentName</p>
                  
                </div>
            </div>
        </div>
    }
</div>