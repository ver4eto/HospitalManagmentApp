﻿@using HospitalManagment.ViewModels.Doctor
@model IEnumerable<DoctorIndexViewModel>

@{
    ViewData["Title"] = "All Doctors";
}

<h2>All Doctors</h2>

<div class="row">
    @foreach (var doctor in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
                <img src="~/images/Untitled.jpg" class="card-img-top" alt="Doctor Image" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <p class="card-title"><strong>First name: </strong>@doctor.FirstName</p>
                    <p class="card-text"><strong>Last name: </strong>@doctor.LastName</p>
                    <p class="card-text"><strong>Specialty: </strong>@doctor.Specialty</p>
                    <p class="card-text"><strong>Department: </strong>@doctor.DepartmentName</p>
                           <div class="btn-group" role="group" aria-label="Doctor Actions">
        <!-- Update Button -->
            <a asp-controller="Doctor" asp-action="Menage" asp-route-id="@doctor.Id" class="btn btn-warning btn-sm">Update</a>

        <!-- Delete Button -->
        <form asp-controller="Doctor" asp-action="Delete" asp-route-id="@doctor.Id" method="post" class="d-inline">
            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this doctor?');">
                Delete
            </button>
        </form>
    </div>
                </div>
            </div>
        </div>
    }
</div>