@using HospitalManagment.ViewModels.Doctor
@model DeleteDoctorViewModel

@{
    ViewData["Title"] = "Delete Doctor";
}

<div class="container mt-5">
    <h2 class="text-center text-danger">Delete Doctor</h2>

    <p class="mt-4">Are you sure you want to delete this doctor?</p>

    <div class="card p-3 mb-4">
        <h4>@Model.FirstName @Model.FirstName</h4>
        <p><strong>Specialty:</strong> @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Specialty</p>
        <p><strong>Department:</strong> @Model.DepartmentName</p>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Confirm Delete</button>
        <a asp-controller="Doctor" asp-action="Manage" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>
