@using HospitalManagment.ViewModels.Doctor
@model MenageDoctorViewModel

@{
    ViewData["Title"] = "Manage Doctor";
}

<div class="container mt-5">
    <h2 class="text-center">Manage Doctors</h2>

    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Specialty</th>
                <th>Email</th>
                <th>Salary</th>
                <th>Department</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tb
                <tr>
                    <td>@Model.FirstName</td>
                    <td>@Model.LastName</td>
                    <td>@Model.Specialty</td>
                    <td>@Model.EmailAddress</td>
                    <td>@Model.Salary</td>
                    <td>@Model.DepartmentName</td>
                    <td>
                        <a asp-controller="Doctor" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-warning">Edit</a>

                        <form asp-controller="Doctor" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this doctor?');">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="Create" class="btn btn-primary">Add New Doctor</a>
</div>
