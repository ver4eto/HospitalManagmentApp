@{
    ViewData["Title"] = "Employee Management";
}

<h1 class="text-center">Employee Management</h1>

<div class="container mt-5">
    <!-- Doctor Management Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Doctor Management</h5>
                    <a class="btn btn-primary btn-block mb-2" asp-controller="Doctor" asp-action="Create">Add Doctor</a>
                    <a class="btn btn-danger btn-block mb-2" asp-controller="Doctor" asp-action="Index">Change or Discharge Doctor</a>
                    <a class="btn btn-secondary btn-block" asp-controller="Department" asp-action="Index">Move Doctor to Department</a>
                </div>
            </div>
        </div>

        <!-- Nurse Management Section -->
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Nurse Management</h5>
                    <a class="btn btn-primary btn-block mb-2" asp-controller="Nurse" asp-action="Add">Add Nurse</a>
                    <a class="btn btn-danger btn-block mb-2" asp-controller="Nurse" asp-action="Index">Change or Discharge Nurse</a>
                    <a class="btn btn-secondary btn-block" asp-controller="Department" asp-action="Index">Move Nurse to Department</a>
                </div>
            </div>
        </div>
    </div>
</div>
