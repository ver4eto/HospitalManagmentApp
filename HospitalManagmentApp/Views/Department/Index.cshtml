
<style>
   
</style>

<head>
    <link rel="stylesheet" href="~/css/departmentIndex.css" />
</head>

<h2>All Departments in the Hospital</h2>

<div class="row">
    @foreach (var department in Model)

    {
        <div class="col-md-6">
            <!-- Larger department cards -->
            <div class="card mb-4 shadow-sm">
                <img src="~/images/Department.jpg" class="card-img-top" alt="Department Image" style="height: 250px; object-fit: cover;">
                <div class="card-body">
                    <p class="card-title">Department name: @department.Name</p>
                    <p class="card-text">Doctors: @department.DepartmentDoctors</p>
                    <p class="card-text">Nurses: @department.Nurses</p>
                    <p class="card-text">Rooms: @department.Rooms</p>
                    <div class="btn-group" role="group" aria-label="Department Actions">

                        <!-- Add Doctor -->
                        <form asp-controller="Doctor" asp-action="AddDoctorToDepartment" method="get" class="d-inline">
                            <input type="hidden" name="depId" value="@department.Id" />
                            <button type="submit" class="btn btn-add">Add Doctor</button>
                        </form>

                        <!-- Add Nurse -->
                        <form asp-controller="Nurse" asp-action="AddNurseToDepartment" method="get" class="d-inline">
                            <input type="hidden" name="depId" value="@department.Id" />
                            <button type="submit" class="btn btn-add">Add Nurse</button>
                        </form>

                        <!-- Add Room -->
                        <form asp-controller="Room" asp-action="Add" method="get" class="d-inline">
                            <input type="hidden" name="depId" value="@department.Id" />
                            <button type="submit" class="btn btn-add">Add Room</button>
                        </form>

                        <!-- Update Button -->
                        <a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-update">Update</a>

                        <!-- Delete Button -->
                        <form asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-delete" onclick="return confirm('Are you sure you want to delete this department?');">
                                Delete
                            </button>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    }
</div>
