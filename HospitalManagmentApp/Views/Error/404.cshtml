@{
    ViewData["Title"] = "Page Not Found";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f3f4f6;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .error-container {
        text-align: center;
        padding: 50px 20px;
    }

    .error-image {
        max-width: 300px;
        margin: 0 auto 20px;
        display: block;
    }

    .error-title {
        font-size: 3rem;
        color: #ff4b2b;
        margin-bottom: 20px;
    }

    .error-message {
        font-size: 1.2rem;
        color: #555;
        margin-bottom: 30px;
    }

    .redirect-btn {
        font-size: 1rem;
        padding: 10px 20px;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        transition: background-color 0.3s ease;
    }

    .redirect-btn:hover {
        background-color: #0056b3;
    }
</style>

<div class="error-container">
    <!-- Include the image -->
    <img src="/images/404_page_cover.jpg" alt="Page Not Found" class="error-image" />

    <h1 class="error-title">404 - Page Not Found</h1>
    <p class="error-message">
        Sorry, the page you are looking for does not exist.
        Please check the URL or go back to the homepage.
    </p>
    <a href="/" class="redirect-btn">Go to Homepage</a>
</div>
